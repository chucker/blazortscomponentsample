@page "/"

@using SampleComponent.Shared.Components

<h1>Hello, world!</h1>

<p>Welcome to your new app.</p>

<p>Set how satisfied you are:</p>

<p>
    <Slider Min="-30" Max="90" Step="10" bind-Value="@Value" Tooltip="@Slider.TooltipMode.Always"
            Ticks="@(new[] { -30, 0, 90 })" />
</p>

<p>
    <!-- the value here gets updated live from
        
         TS (Slider.ts) -> child component (Slider.cshtml) -> this component
        
        -->
    @Value
</p>

@functions {
    private int Value { get; set; } = 60;
}
